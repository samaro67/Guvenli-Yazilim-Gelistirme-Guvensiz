@model YemekTarifleri.Models.Tarif

@{
    ViewData["Title"] = "Tarif Ekle";
}

<h2>🍳 Yeni Tarif Ekle</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Baslik" class="form-label"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Icerik" class="form-label"></label>
        <textarea asp-for="Icerik" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Icerik" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ResimYolu" class="form-label">Resim Linki</label>
        <input asp-for="ResimYolu" class="form-control" />
        <span asp-validation-for="ResimYolu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Tarifi Kaydet</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

